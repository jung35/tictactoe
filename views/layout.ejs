<!DOCTYPE html>
<html>
  <head>
    <title>TicTacToe</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/style.css">
    <!--STYLES END-->
  </head>

  <body>
    <div class="modal fade login-modal" tabindex="-1" role="dialog" aria-labelledby="login-modal-label" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">

          <div class="modal-header">
            <h4 class="modal-title" id="login-modal-label">Set Username</h4>
          </div>
          <div class="modal-body">
            <input type="text" class="set-username-input form-control input-lg" placeholder="Username">
          </div>
        </div>
      </div>
    </div>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainMenu">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Tic Tac Toe</a>
        </div>

        <div class="collapse navbar-collapse" id="mainMenu">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <button type="button" class="signin btn btn-default navbar-btn" data-toggle="modal" data-target=".login-modal">Sign in</button>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <!-- <%- body %> -->
        </div>
        <div class="col-md-4 chatroom">

          <div role="tabpanel">
            <div class="col-xs-12">
              <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#global-chat" aria-controls="home" role="tab" data-toggle="tab">Global</a></li>
                <li role="presentation"><a href="#lobby-chat" aria-controls="profile" role="tab" data-toggle="tab">Lobby</a></li>
                <li role="presentation"><a href="#global-users" aria-controls="profile" role="tab" data-toggle="tab">Users</a></li>
              </ul>
            </div>

            <!-- Tab panes -->
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active" id="global-chat">
                <div class="col-xs-12">
                  <ul class="display-chat">
                    <li class="title">
                      <h4>Global Chat</h4>
                    </li>
                  </ul>
                  <input type="text" class="chat-input" placeholder="chat...">
                </div>
              </div>
              <div role="tabpanel" class="tab-pane" id="lobby-chat">
                <div class="col-xs-12">
                  <ul class="display-chat">
                    <li class="title">
                      <h4>Lobby Chat &mdash; <small></small></h4>
                    </li>
                  </ul>
                  <input type="text" class="chat-input" placeholder="chat...">
                </div>
              </div>
              <div role="tabpanel" class="tab-pane" id="global-users">
                <div class="col-xs-12">
                  <ul class="display-user-list">
                    <li class="title">
                      <h4>Users Online</h4>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/user.js"></script>
    <!--SCRIPTS END-->
  </body>
</html>
